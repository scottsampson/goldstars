<h2>Listing awards</h2>

<p id="notice"><%= notice %></p>

<table id="admin">
<% @awards.each do |award| %>
  <tr>
    <td><%= award.participant.name %></td>
    <td><%= award.award_type.name %></td>
    <td><%= award.description %></td>
    <td class="created_at"><%= award.created_at.strftime( "%b %d, %Y" ) %></td>
    <td class="admin"><%= link_to 'Show', [:admin,award] %></td>
    <td class="admin"><%= link_to 'Edit', edit_admin_award_path(award) %></td>
    <td class="admin"><%= link_to 'Destroy', [:admin,award], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Award', new_admin_award_path %>
