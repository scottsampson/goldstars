<h1>Listing awards</h1>

<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th>User</th>
    <th>Award</th>
    <th>Date</th>
    <th></th>
    <th></th>
  </tr>

<% @awards.each do |award| %>
  <tr>
    <td><%= award.participant.name %></td>
    <td><%= award.award_type.name %></td>
    <td><%= award.created_at %></td>
    <td><%= link_to 'Show', [:admin,award] %></td>
    <td><%= link_to 'Edit', edit_admin_award_path(award) %></td>
    <td><%= link_to 'Destroy', [:admin,award], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Award', new_admin_award_path %>
