<h2>Types of Awards</h2>

<p id="notice"><%= notice %></p>

<table id="admin">
<% @award_types.each do |award_type| %>
  <tr>
    <td><%= award_type.name %></td>
    <td><%= award_type.description %></td>
    <td class="stars"><%= award_type.num_points %> stars</td>
    <td class="admin"><%= link_to 'Show', [:admin,award_type] %></td>
    <td class="admin"><%= link_to 'Edit', edit_admin_award_type_path(award_type) %></td>
    <td class="admin"><%= link_to 'Destroy', [:admin,award_type], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Award type', new_admin_award_type_path %>
